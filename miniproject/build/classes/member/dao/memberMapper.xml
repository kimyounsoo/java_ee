<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberSQL">
<!-- 로그인 -->
	<select id="login" parameterType="java.util.Map" resultType="member">
		select * from member where id=#{id} and pwd=#{pwd}
	</select>
	
	<insert id="write" parameterType="member"> <!-- 인서트는 리절트가 필요없다 자기가 알아서 갯수의 값을 넘겨주기때문에 -->
		insert into member values(#{name}
								 ,#{id}
								 ,#{pwd}
								 ,#{gender}
								 ,#{email1}
								 ,#{email2}
								 ,#{tel1}
								 ,#{tel2}
								 ,#{tel3}
								 ,#{zipcode}
								 ,#{addr1}
								 ,#{addr2}
								 ,sysdate)
	</insert>
	<!-- 아이디 중복체크 -->	
	<select id="isExistId" parameterType="String" resultType="member"><!-- 결과물을 DTO에 담겠다는 뜻 resultType -->
		select * from member where id=#{id}
	</select>
	<!-- 우편번호 -->
	<!-- selectList 를 DAO 에 명시해 주면 list 에는 알아서 담아준다 그러면 주소 한줄 한줄을 어디에  담아둘지 resultType 에 명시해 주어야한다 -->
	<select id="getZipcodeList" parameterType="java.util.Map" resultType="zipcode">
		select * from newzipcode 
		where sido like '%'||#{sido}||'%' 
		and nvl(sigungu,'0') like '%'||#{sigungu}||'%' 
		and roadname like '%'||#{roadname}||'%'
	</select>
	<!-- 1사람의 글 -->
	<select id="getMember" parameterType="String" resultType="member">
		select * from member where id=#{id}
	</select>
	<!-- 회원정보수정 -->
	<update id="modify" parameterType="member">
	update member set name=#{name}
					, pwd=#{pwd}
		  	 	    , gender=#{gender}
			 	    , email1=#{email1}
	    		  	, email2=#{email2}
					, tel1=#{tel1}
					, tel2=#{tel2}
					, tel3=#{tel3}
					, zipcode=#{zipcode}
					, addr1=#{addr1}
					, addr2=#{addr2}
					, logtime=sysdate where id=#{id}
	</update>
	
</mapper>